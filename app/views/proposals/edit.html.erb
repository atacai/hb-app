<div class="row gap-20 masonry pos-r">
  <div class="masonry-sizer col-md-6"></div>
  <div class="masonry-item col-md-6">
    <div class="bgc-white p-20 bd">
      <h6 class="c-grey-900">Edit Proposal</h6>
      <div class="mT-30">
        <%= form_for @proposal do |f| %>
          <div class="form-group">
            <%= f.label :name, t("title") %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :duration_minute, t("Duration (minutes)") %>
            <%= f.number_field :duration_minute, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :conference_id, t("conference") %>
            <%= f.select :conference_id, options_from_collection_for_select(@conferences, "id", "name", @proposal.conference_id), {}, {class: "form-control"} %>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        <% end %>
      </div>
    </div>
  </div>
</div>